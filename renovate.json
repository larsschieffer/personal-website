{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:base"
  ],
  "prHourlyLimit": 2,
  "rangeStrategy": "pin",
  "automerge": true,
  "automergeType": "pr",
  "platformAutomerge": true,
  "dependencyDashboard": false,
  "packageRules": [
    {
      "matchPackagePatterns": [
        "^@remix-run\\/",
        "@vercel/remix"
      ],
      "groupName": "Remix packages"
    },
    {
      "packageNames": [
        "node"
      ],
      "enabled": false
    }
  ]
}
