// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("POSTGRES_PRISMA_URL")
}

model Resume {
  id   String @id @default(uuid())
  path String
}

model Experience {
  id       String    @id @default(uuid())
  jobTitle String
  employer String
  start    DateTime  @db.Date
  end      DateTime? @db.Date
  skills   Skill[]
}

model Skill {
  id          String       @id @default(uuid())
  title       String
  area        SkillArea
  experiences Experience[]
}

enum SkillArea {
  Frontend
  Backend
  EndToEnd
  Cloud
  None
}
